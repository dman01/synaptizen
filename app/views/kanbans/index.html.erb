<% @kanbans.each do |kanban| %>
  <tr>
    <td><%= kanban.title %></td>
    <td><%= kanban.description %></td>
    <td><%= link_to 'Show', kanban %></td>
    <td><%= link_to 'Edit', edit_kanban_path(kanban) %></td>
    <td><%= link_to 'Destroy', kanban, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

